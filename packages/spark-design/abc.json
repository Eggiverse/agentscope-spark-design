{
  "assets": {
    "type": "command",
    "command": {
      "cmd": [
        "node build.js",
        "npm run build",
        "npm run docs:build",
        "mkdir dist",
        "mv ./docs-dist/index.html ./dist",
        "find ./docs-dist -type f -name 'index.html' -exec rm -f {} +",
        "npm run build:mcp",
        "mkdir -p ./docs-dist/llms",
        "cp -r ./llms ./docs-dist",
        "mv ./docs-dist ./dist",
        "sh cleanup.sh",
        "shopt -s dotglob",
        "rsync -av --exclude='node_modules' * $BUILD_DEST",
        "shopt -u dotglob"
      ]
    }
  }
}